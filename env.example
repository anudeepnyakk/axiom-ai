# Axiom AI Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================
# REQUIRED: OpenAI API Key
# ============================================================
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================================
# OPTIONAL: Security
# ============================================================
# Comma-separated list of valid API keys for authentication
# Generate keys with: python -c "from axiom.security import APIKeyGenerator; print(APIKeyGenerator.generate())"
AXIOM_API_KEYS=axiom_key1,axiom_key2

# ============================================================
# OPTIONAL: Model Configuration
# ============================================================
# Embedding provider: 'local' or 'openai'
EMBEDDING_PROVIDER=local

# Embedding model
# For local: all-MiniLM-L6-v2, all-mpnet-base-v2, multilingual-e5-base
# For OpenAI: text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM provider: 'openai' (more providers in future)
LLM_PROVIDER=openai

# LLM model: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
LLM_MODEL=gpt-4o-mini

# ============================================================
# OPTIONAL: Logging
# ============================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: 'text' or 'json'
LOG_FORMAT=json

# ============================================================
# OPTIONAL: ChromaDB (if running separately)
# ============================================================
# These are set automatically by docker-compose
# Only needed if running ChromaDB externally
# CHROMA_HOST=localhost
# CHROMA_PORT=8001

